<hr><h1>Required Web Features</h1>

<!-- 1. Fetch API -->
<h2>1. Fetch API (Random Quote)</h2>
<button onclick="getQuote()">Load Quote</button>
<div id="quoteBox" style="padding:10px; border:1px solid black; background:#fff; width:50%;"></div>

<!-- 2. iFrame -->
<h2>2. iFrame Example</h2>
<iframe src="https://www.example.com" width="600" height="300"></iframe>

<!-- 3. Cookies -->
<h2>3. Cookie Usage</h2>
<input type="text" id="cookiename" placeholder="Enter your name">
<button onclick="saveCookie()">Save Cookie</button>
<p id="cookieResult"></p>

<!-- 4. Local Storage -->
<h2>4. Local Storage Example</h2>
<input type="text" id="favColor" placeholder="Favorite color">
<button onclick="saveColor()">Save Color</button>
<p id="colorResult"></p>

<script>
/* FETCH API */
function getQuote() {
    fetch("https://api.quotable.io/random")
      .then(res => res.json())
      .then(data => {
          document.getElementById("quoteBox").innerHTML =
          `"${data.content}" — <b>${data.author}</b>`;
      });
}

/* COOKIES */
function saveCookie() {
    let name = document.getElementById("cookiename").value;
    document.cookie = "username=" + name + "; max-age=86400";
    document.getElementById("cookieResult").innerHTML = "Cookie saved for: " + name;
}

/* LOCAL STORAGE */
function saveColor() {
    let color = document.getElementById("favColor").value;
    localStorage.setItem("favColor", color);
    document.getElementById("colorResult").innerHTML = "Saved color: " + color;
}

window.onload = function() {
    let storedColor = localStorage.getItem("favColor");
    if (storedColor) {
        document.getElementById("colorResult").innerHTML = "Previously saved color: " + storedColor;
    }
};
</script>

